@model CursoInicianteMvc.Models.SubtarefaDetalharViewModel

@{
    ViewData["Title"] = "Excluir Subtarefa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex pt-3">
                <div class="card-title flex-grow-1">
                    <h4>Excluir Subtarefa</h4>
                </div>
            </div>
            <div class="card-body">
                <div class="row gap-3">
                    <div class="col-12">
                        <div class="form-group">
                            <label asp-for="TarefaId" class="form-label"></label>
                            <textarea asp-for="TarefaDescricao" class="form-control" readonly="readonly"></textarea>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <label asp-for="Descricao" class="form-label"></label>
                            <textarea asp-for="Descricao" class="form-control" readonly="readonly"></textarea>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="RealizadoEm" class="form-label"></label>
                            <input asp-for="RealizadoEm" class="form-control" readonly="readonly"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex">
                <a asp-controller="Tarefa" asp-action="Details" asp-route-id="@Model.TarefaId" class="me-auto btn btn-secondary">Voltar</a>
                <div class="ms-auto">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id"/>
                        <input type="submit" value="Excluir" class="btn btn-danger"/>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>