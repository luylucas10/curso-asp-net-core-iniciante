@model IEnumerable<CursoInicianteMvc.Models.Pessoa>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Index";
}

@section Breadcumb
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
            <li class="breadcrumb-item text-sm">
                <a class="opacity-5 text-dark" asp-controller="Home" asp-action="Index">In√≠cio</a>
            </li>
            <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Pessoas</li>
        </ol>
        @* <h6 class="font-weight-bolder mb-0">Pessoas</h6> *@
    </nav>
}

<div class="row">
    <div class="card">
        <div class="card-header">
            <div class="card-title d-flex">
                <div>
                    <h4>Pessoas</h4>
                </div>
                <div class="ms-auto">
                    <a asp-action="Create" class="btn btn-info">Nova</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table
                class="table"
                data-toggle="table"
                data-url="@Url.Action("Search")"
                data-pagination="true"
                data-side-pagination="server"
                data-locale="pt-BR">
                    <thead>
                        <th data-title="Nome" data-field="nome" data-sortable="true" data-sort-name="Nome"></th>
                        <th data-title="e-Mail" data-field="email" data-sortable="true" data-sort-name="Email"></th>
                        <th data-title="Celular" data-field="celular" data-sortable="true" data-sort-name="Celular"></th>
                        <th data-title="#" data-field="id"></th>
                    </thead>

            </table>
        </div>
    </div>
</div>