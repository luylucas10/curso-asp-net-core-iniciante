@model CursoInicianteMvc.Models.PessoaEditarViewModel

@{
    ViewData["Title"] = "Editar Pessoa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<div class="row">
    <div class="card">
        <form asp-action="Edit" asp-controller="Pessoa" method="post">
            <div class="card-header py-3">
                <div class="card-title">
                    <h4>Editar Pessoa</h4>
                </div>
            </div>
            <div class="card-body">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="Id" type="hidden">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control"/>
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Celular" class="form-label"></label>
                            <input asp-for="Celular" class="form-control"/>
                            <span asp-validation-for="Celular" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex">
                <div>
                    <a class="btn btn-secondary" asp-action="Index" asp-controller="Pessoa">Voltar</a>
                </div>
                <div class="ms-auto">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </div>
        </form>
    </div>
</div>