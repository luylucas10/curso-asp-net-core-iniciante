@model CursoInicianteMvc.Models.TarefaCadastrarViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<div class="row">
    <div class="card">
        <form asp-action="Create" method="post">
            <div class="card-header py-3">
                <div class="card-title">
                    <h4>Nova Tarefa</h4>
                </div>
            </div>
            <div class="card-body">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="PessoaId" class="form-label"></label>
                            <select asp-for="PessoaId" class="form-control" asp-items="ViewBag.PessoaId"></select>
                            <span asp-validation-for="PessoaId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Descricao" class="form-label"></label>
                            <input asp-for="Descricao" class="form-control"/>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex">
                <div>
                    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
                </div>
                <div class="ms-auto">
                    <button type="submit" class="btn btn-primary">Cadastrar</button>
                </div>
            </div>
        </form>
    </div>
</div>