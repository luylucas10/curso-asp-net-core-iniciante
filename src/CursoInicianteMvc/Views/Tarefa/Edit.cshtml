@model CursoInicianteMvc.Models.TarefaEditarViewModel

@{
    ViewData["Title"] = "Editar Tarefa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
                <form asp-action="Edit" asp-controller="Tarefa" method="post">
                    <div class="card-header py-3">
                        <div class="card-title">
                            <h4>Editar Tarefa</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="@Model.Id">
                        <input type="hidden" asp-for="@Model.PessoaId">
                        <div class="row gap-3">
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="PessoaId" class="form-label"></label>
                                    <input class="form-control" asp-for="PessoaNome" disabled="disabled" readonly="readonly"/>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="Descricao" class="form-label"></label>
                                    <textarea asp-for="Descricao" class="form-control"></textarea>
                                    <span asp-validation-for="Descricao" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer d-flex">
                        <div>
                            <a class="btn btn-secondary" asp-controller="Tarefa" asp-action="Details" asp-route-id="@Model.Id">Voltar</a>
                        </div>
                        <div class="ms-auto">
                            <button type="submit" class="btn btn-primary">Atualizar</button>
                        </div>
                    </div>
                </form>
            </div>
    </div>
</div>